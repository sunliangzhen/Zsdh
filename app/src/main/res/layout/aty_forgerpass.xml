<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:background="@color/top">

        <ImageView
            android:id="@+id/forger_imgv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:src="@drawable/ic_menu_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="忘记密码"
            android:textColor="#fff"
            android:textSize="@dimen/text_title" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px"
        android:background="#fff"
        android:orientation="vertical"
        android:paddingLeft="30px"
        android:paddingRight="30px">

        <TextView
            android:id="@+id/forgetpass_tv_phone"
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:background="#fff"
            android:gravity="center_vertical"
            android:textColor="#999999"
            android:textSize="@dimen/text_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#dbdbdb" />

        <LinearLayout
            android:id="@+id/forgetpass_linlay_imgcode"
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:gravity="center_vertical"
            android:visibility="gone">

            <EditText
                android:id="@+id/forgetpass_etxt_imgcode"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#fff"
                android:gravity="center_vertical"
                android:hint="请输入图片验证码"
                android:textColorHint="#999999"
                android:textSize="@dimen/text_content" />

            <ImageView
                android:id="@+id/forgetpass_imgv_code"
                android:layout_width="200px"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#dbdbdb" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/forgetpass_etxt_code"
                android:layout_width="wrap_content"
                android:layout_height="80px"
                android:layout_weight="1"
                android:background="#fff"
                android:gravity="center_vertical"
                android:hint="验证码"
                android:textColor="#000"
                android:textColorHint="#999999"
                android:textSize="@dimen/text_content" />

            <info.hoang8f.widget.FButton
                android:id="@+id/forgetpass_tv_send"
                android:layout_width="160px"
                android:layout_height="match_parent"
                android:layout_marginBottom="10px"
                android:layout_marginTop="10px"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="#fff"
                android:textSize="@dimen/text_details2"
                fbutton:buttonColor="@color/button"
                fbutton:cornerRadius="7px"
                fbutton:shadowColor="@color/button"
                fbutton:shadowEnabled="false"
                fbutton:shadowHeight="15px" />
        </LinearLayout>

    </LinearLayout>


    <info.hoang8f.widget.FButton
        android:id="@+id/forgetpass_fb_ok"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:layout_marginBottom="30px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="90px"
        android:gravity="center"
        android:text="下一步"
        android:textColor="#fff"
        android:textSize="30px"
        fbutton:buttonColor="@color/button"
        fbutton:cornerRadius="7px"
        fbutton:shadowColor="@color/button"
        fbutton:shadowEnabled="false"
        fbutton:shadowHeight="7px" />
</LinearLayout>
