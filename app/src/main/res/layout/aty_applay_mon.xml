<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:background="@color/top">

        <ImageView
            android:id="@+id/applaymon_imgv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:src="@drawable/ic_menu_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="提现"
            android:textColor="#fff"
            android:textSize="@dimen/text_title" />
    </RelativeLayout>

    <EditText
        android:id="@+id/applaymon_etxt_mon"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="50px"
        android:background="#fff"
        android:hint="请输入提现金额"
        android:inputType="number"
        android:maxLength="11"
        android:paddingLeft="30px"
        android:paddingRight="30px"
        android:textColorHint="#999999"
        android:textSize="@dimen/text_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:gravity="right"
        android:paddingRight="30px"
        android:text="温馨提示： 最低提现金额 ≤ 提现金额 ≤ 余额"
        android:textColor="#f00"
        android:textSize="@dimen/text_details2" />

    <info.hoang8f.widget.FButton
        android:id="@+id/applaymon_fb"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:layout_marginBottom="30px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="60px"
        android:gravity="center"
        android:text="确认提现"
        android:textColor="#fff"
        android:textSize="30px"
        fbutton:buttonColor="@color/button"
        fbutton:cornerRadius="7px"
        fbutton:shadowColor="@color/button"
        fbutton:shadowEnabled="false"
        fbutton:shadowHeight="7px" />
</LinearLayout>
