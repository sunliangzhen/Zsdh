<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/submit_relay_top"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:background="@color/top">

        <ImageView
            android:id="@+id/submit_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:src="@drawable/ic_menu_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="任务提交"
            android:textColor="#fff"
            android:textSize="35px" />
    </RelativeLayout>


    <com.linearlistview.LinearListView
        android:id="@+id/submit_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:dividerPadding="2dp"
        android:orientation="vertical"
        android:showDividers="none|middle|beginning|end"
        android:visibility="gone"
        app:dividerThickness="2dp" />

    <com.shuxiangbaima.task.view.a.ExpandGrideView
        android:id="@+id/submit_gv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:horizontalSpacing="20px"
        android:numColumns="3"
        android:padding="30px"
        android:verticalSpacing="20px" />

    <info.hoang8f.widget.FButton
        android:id="@+id/sub_btn_ok"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:layout_marginBottom="30px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="30px"
        android:gravity="center"
        android:text="确认提交"
        android:textColor="#fff"
        android:textSize="30px"
        fbutton:buttonColor="@color/button"
        fbutton:cornerRadius="7px"
        fbutton:shadowColor="@color/button"
        fbutton:shadowEnabled="false"
        fbutton:shadowHeight="7px" />


</LinearLayout>
