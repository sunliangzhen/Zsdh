<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/page_linlay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="15px"
        android:background="#f5f5f5" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:paddingBottom="15px"
        android:paddingLeft="30px"
        android:paddingRight="30px"
        android:paddingTop="15px">

        <ImageView
            android:id="@+id/item_pagelv_imgv_cover"
            android:layout_width="150px"
            android:layout_height="150px"
            android:layout_marginRight="15px"
            android:scaleType="fitXY"
            android:src="@drawable/banner" />


        <TextView
            android:id="@+id/item_pagelv_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/item_pagelv_imgv_cover"
            android:maxEms="20"
            android:singleLine="true"
            android:text="你还在为肥胖烦恼吗？你还在为肥胖烦恼吗"
            android:textColor="#000"
            android:textSize="30px" />

        <TextView
            android:id="@+id/item_pagelv_tv_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_pagelv_tv_title"
            android:layout_marginTop="30px"
            android:layout_toRightOf="@id/item_pagelv_imgv_cover"
            android:text="奖励 : "
            android:textColor="#000"
            android:textSize="24px" />

        <TextView
            android:id="@+id/item_pagelv_tv_mon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_pagelv_tv_title"
            android:layout_marginTop="30px"
            android:layout_toRightOf="@id/item_pagelv_tv_01"
            android:text="￥0.1"
            android:textColor="#f00"
            android:textSize="24px" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_pagelv_tv_01"
            android:layout_marginTop="30px"
            android:layout_toRightOf="@+id/item_pagelv_imgv_cover"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_pagelv_tv_share"
                android:layout_width="70px"
                android:layout_height="35px"
                android:layout_below="@id/item_pagelv_tv_01"
                android:layout_marginLeft="10px"
                android:background="@drawable/shape_page_share"
                android:gravity="center"
                android:text="分享"
                android:textColor="#f00"
                android:textSize="20px" />

            <TextView
                android:id="@+id/item_pagelv_tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="50px"
                android:text="剩余：969"
                android:textColor="#999999"
                android:textSize="25px" />

        </LinearLayout>

        <TextView
            android:id="@+id/item_pagelv_tv_state"
            android:layout_width="140px"
            android:layout_height="60px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_page_s"
            android:gravity="center"
            android:text="进行中"
            android:textColor="#fff"
            android:textSize="25px" />

    </RelativeLayout>
</LinearLayout>
