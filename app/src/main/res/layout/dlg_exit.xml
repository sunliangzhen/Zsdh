<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_list_rg"
    android:orientation="vertical">


    <TextView
        android:id="@+id/buildeexti_tv_content"
        android:layout_width="400px"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:layout_marginTop="50px"
        android:gravity="center"
        android:text="退出当前账号?"
        android:textSize="35px" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="75px"
        android:background="#dbdbdb" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/buildeexti_tv_no"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_exit_01"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/top"
            android:textSize="30px" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#dbdbdb" />

        <TextView
            android:id="@+id/builderexit_tv_ok"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_exit_02"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/top"
            android:textSize="30px" />

    </LinearLayout>


</LinearLayout>
